<!ATTLIST persona sexo (hombre|mujer) #IMPLIED>
<!ELEMENT nombre (#PCDATA)>
<!ELEMENT email (#PCDATA)>
<!ELEMENT parentesco EMPTY>
<!ATTLIST parentesco tutor-legal IDREFS #IMPLIED hermano-a IDREFS #IMPLIED>
]>
<relacion>
    <persona carnet="a" sexo="hombre">
        <nombre>Aitor Menta</nombre>
        <email>ayquetormentas@hotmail.com</email>
        <parentesco hermano-a="a"/>
    </persona>
</relacion>